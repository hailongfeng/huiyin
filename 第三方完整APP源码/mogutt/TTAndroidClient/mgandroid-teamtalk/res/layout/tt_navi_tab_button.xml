<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tab_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/tab_btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="default_tab_image"
            android:scaleType="centerInside"
            android:src="@drawable/tt_default_user_portrait_corner" />

        <TextView
            android:id="@+id/tab_unread_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/tab_btn_default"
            android:background="@drawable/tt_message_notify_single"
            android:visibility="gone"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tab_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_btn_default"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="聊天"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>