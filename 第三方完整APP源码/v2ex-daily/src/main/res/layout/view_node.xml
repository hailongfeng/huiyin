<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/card_bg_play"
              android:padding="8dp"
              >

    <ImageButton
        android:id="@+id/btn_view_node_add"
        android:layout_alignParentRight="true"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_add_on_card_before"
        />

    <TextView
        android:id="@+id/txt_view_node_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/btn_view_node_add"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/txt_view_node_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_view_node_title"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="header"
        android:textColor="#444"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_view_node_topics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_view_node_header"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="14 topics"
        android:textColor="#444"
        />

</RelativeLayout>