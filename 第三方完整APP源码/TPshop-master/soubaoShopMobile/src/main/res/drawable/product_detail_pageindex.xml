<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">   
<!-- 连框颜色值 -->
<item>   
  <shape>   
    <solid android:color="#d9d8d9" />   
    <corners android:radius="25dip" />    
       
  </shape>   
</item>   
<!-- 主体背景颜色值 -->  
<item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">   
     <shape>   
	    <gradient 
	        android:startColor="#d9d8d9" android:centerColor="#d9d8d9" 
	    	android:endColor="#d9d8d9" android:type="linear" android:angle="90"  
	    	android:centerX="0.5" android:centerY="0.5" />  
   
    	<!-- padding android:left="2dp" android:top="2dp" android:right="2dp"  
    		android:bottom="2dp" / -->  
   		<!-- 应该是圆角 -->
    	<corners android:radius="25dip" android:topLeftRadius="25dip" android:topRightRadius="25dip"
				android:bottomLeftRadius="25dip" android:bottomRightRadius="25dip"/>    
     </shape>	 
</item>  
</layer-list>