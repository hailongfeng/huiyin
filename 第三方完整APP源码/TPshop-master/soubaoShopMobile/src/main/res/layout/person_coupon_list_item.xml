<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupon_rlayout"
    android:layout_height="110dip"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin_space"
    android:layout_marginRight="@dimen/margin_space"
    android:background="@drawable/icon_coupon_unuse">

    <RelativeLayout
        android:id="@+id/coupon_money_rlayout"
        android:layout_width="180dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/coupon_rmb_txtv"
            android:layout_width="20dip"
            android:layout_height="90dip"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text="¥"
            android:textSize="20dip" />
        <TextView
            android:id="@+id/coupon_money_txtv"
            android:layout_toRightOf="@+id/coupon_rmb_txtv"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text="15"
            android:textSize="55dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/coupon_money_rlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right">

        <TextView
            android:id="@+id/coupon_title_txtv"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="订单满100送15元"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/coupon_time_txtv"
            android:layout_below="@+id/coupon_title_txtv"
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="left|center_vertical"
            android:lines="2"
            android:text="使用时间:\n2016-7-14 14:27:56"
            android:textSize="@dimen/textSizeNormal" />
    </RelativeLayout>

</RelativeLayout>