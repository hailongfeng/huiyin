<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:orientation="horizontal"
	android:clickable="true"
	android:id="@+id/order_product_flayout"
    android:background="@drawable/view_bg_clickable_selector">


	<HorizontalScrollView
		android:id="@+id/order_product_scrollv"
		android:layout_marginLeft="@dimen/margin_space"
		android:layout_marginRight="108dip"
		android:layout_width="match_parent"
		android:layout_gravity="center_vertical"
		android:layout_height="80dip">

		<LinearLayout
			android:id="@+id/product_list_gallery_lyaout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="horizontal" >
		</LinearLayout>
	</HorizontalScrollView>

	<TextView
		android:id="@+id/order_product_count_txtv"
		android:layout_width="80dip"
		android:layout_height="match_parent"
		android:layout_gravity="right"
		android:gravity="center"
		android:layout_marginRight="28dip"
		android:text="共5件商品"
		style="@style/textStyle.Normal.black"/>

	<ImageView
		android:layout_gravity="right|center_vertical"
		android:layout_marginRight="@dimen/margin_space"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/personal_arrow_right"/>
		
</FrameLayout>