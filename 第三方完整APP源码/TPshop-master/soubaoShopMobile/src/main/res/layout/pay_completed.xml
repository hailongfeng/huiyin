<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dip"
        android:orientation="vertical"
        android:background="@color/bg_view">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="105dip"
            android:layout_margin="20dip">

            <ImageView
                android:id="@+id/pay_completed_imgv"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:src="@drawable/icon_pay_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pay_trade_no_txtv"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_toRightOf="@id/pay_completed_imgv"
                android:layout_marginTop="30dip"
                android:layout_marginRight="@dimen/margin_space"
                android:layout_marginLeft="@dimen/margin_space_half"
                android:gravity="left"
                android:singleLine="true"
                android:text="订单编号:20160630142108"
                style="@style/textStyle.Normal.black" />

            <TextView
                android:id="@+id/pay_money_txtv"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_toRightOf="@id/pay_completed_imgv"
                android:layout_below="@id/pay_trade_no_txtv"
                android:layout_marginRight="@dimen/margin_space"
                android:layout_marginLeft="@dimen/margin_space_half"
                android:gravity="left"
                android:singleLine="true"
                android:text="支付金额:¥9999"
                style="@style/textStyle.Normal.black" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip">

            <Button
                android:id="@+id/order_btn"
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:text="@string/look_order"
                android:textColor="@color/white"
                android:background="@drawable/button_selector"
                android:layout_alignParentLeft="true"
                />

            <Button
                android:id="@+id/home_btn"
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:text="@string/go_home"
                android:textColor="@color/white"
                android:background="@drawable/button_yellow_selector"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/separator_line"/>

</LinearLayout>